<resources>
  
  <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="RatingBar" parent="Widget.AppCompat.RatingBar">
    <item name="android:progressTint">@color/colorPrimary</item>
    <item name="android:colorAccent">@color/colorPrimary</item>
  </style>
  
  <style name="RatingBarSmall" parent="Widget.AppCompat.RatingBar.Small">
    <item name="android:progressTint">@color/colorPrimary</item>
    <item name="android:colorAccent">@color/colorPrimary</item>
  </style>

  <style name="SectionTitle">
    <item name="android:textColor">#000</item>
    <item name="android:textSize">16sp</item>
  </style>
  
  <style name="SeeMoreButton" parent="Widget.MaterialComponents.Button.TextButton">
    <item name="android:textColor">@color/colorPrimary</item>
    <item name="android:textSize">14sp</item>
  </style>

  <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
    <item name="android:textColor">@color/colorPrimary</item>
    <item name="android:textSize">14sp</item>
  </style>
  
  <style name="numberRatingBar">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_margin">3dp</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">#000</item>
  </style>
  
  <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
    <item name="android:indeterminate">false</item>
    <item name="android:layout_width">150dp</item>
    <item name="android:layout_height">8dp</item>
    <item name="android:layout_margin">9dp</item>
    <item name="android:progressTint">@color/colorPrimary</item>
    <item name="android:max">80</item>
  </style>

  <style name="RestaurantInfoCategorie">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">#000</item>
  </style>

  <style name="IconStyle">
    <item name="android:layout_width">20dp</item>
    <item name="android:layout_height">20dp</item>
    <item name="android:scaleType">centerCrop</item>
    <item name="android:layout_marginHorizontal">14dp</item>
    <item name="android:layout_marginVertical">14dp</item>
  </style>
  
  <style name="CardStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginLeft">@dimen/mtrl_card_spacing</item>
    <item name="android:layout_marginTop">@dimen/mtrl_card_spacing</item>
    <item name="android:layout_marginRight">@dimen/mtrl_card_spacing</item>
  </style>

  <style name="ratingText">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">16sp</item>
    <item name="android:layout_marginTop">3dp</item>
  </style>

  <style name="ratingNumber" parent="ratingText">
    <item name="android:textSize">20sp</item>
    <item name="android:textColor">#000</item>
    <item name="android:layout_marginBottom">5dp</item>
  </style>
  
  <style name="bookingText">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">#000</item>
    <item name="android:textSize">14sp</item>
    <item name="android:layout_margin">8dp</item>
    <item name="android:textStyle">bold</item>
  </style>
  
<style name="editTextStyle">
  <item name="android:layout_height">wrap_content</item>
<item name="android:layout_width">100dp</item>
</style>

  <style name="warningCategorie" parent="RestaurantInfoCategorie">
    <item name="android:textStyle">bold</item>
    <item name="android:layout_marginTop">4dp</item>
    <item name="android:layout_marginLeft">4dp</item>
  </style>

  <style name="iconConfirmation" parent="IconStyle">
    <item name="android:layout_margin">8dp</item>
  </style>

  <style name="confirmationData">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">#000</item>
    <item name="android:textSize">14sp</item>
    <item name="android:layout_marginTop">8dp</item>
  </style>

</resources>