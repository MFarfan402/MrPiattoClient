<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	>
	<com.google.android.material.card.MaterialCardView
		android:layout_marginVertical="16dp"
                style="@style/CardStyle">
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<ImageView
				android:id="@+id/userImage"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_margin="8dp"
				android:src="@drawable/user"
				android:scaleType="centerCrop"
			/>
			<TextView
				android:id="@+id/userNameText"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Mauricio F."
				android:textColor="#000"
				android:textSize="22sp"
				android:layout_marginTop="12dp"
				android:layout_toRightOf="@id/userImage"/>
			<Button
				android:id="@+id/reportButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="REPORTAR"
				style="@style/SeeMoreButton"
				android:layout_marginRight="8dp"
				android:layout_marginTop="8dp"
				android:layout_alignParentRight="true"
			/>
			<RatingBar
				android:id="@+id/ratingBarComment"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:rating="4.6"
				android:layout_marginVertical="5dp"
				android:numStars="5"
				android:stepSize="0.1"
				android:isIndicator="true"
				style="@style/RatingBarSmall"
				android:layout_toRightOf="@id/userImage"
				android:layout_below="@id/userNameText"/>

			<TextView
				android:id="@+id/ratingDate"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="12/12/2019"
				android:textSize="14sp"
				android:layout_below="@id/userImage"
				android:layout_marginLeft="8dp"
				android:layout_marginTop="4dp"
			/>
			<TextView
				android:id="@+id/ratingComment"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="OBVIO MICROBIO QUE SI NOS VAMOS A GRADUAR. Lorem LoremLoremLorem LoremLoremLoremLorem LoremLore mLoremLorem Lorem LoremLorem LoremLorem Lorem"
				android:textSize="14sp"
				android:textColor="#000"
				android:layout_marginVertical="8dp"
				android:layout_marginLeft="8dp"
				android:layout_below="@id/ratingDate"
			/>
		</RelativeLayout>
	</com.google.android.material.card.MaterialCardView>
</androidx.cardview.widget.CardView>
