<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	style="@style/CardStyle"
>
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<ImageView
			android:id="@+id/cardviewVerifierNewImage"
			android:layout_width="match_parent"
			android:layout_height="150dp"
			android:scaleType="centerCrop"
			android:src="@drawable/grid3"			
			/>
		<TextView
			android:id="@+id/cardviewVerifierNewName"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#000"
			android:textStyle="bold"
			android:textSize="24sp"
			android:layout_margin="12dp"
			android:layout_below="@id/cardviewVerifierNewImage"
			/>
		<TextView
            android:id="@+id/cardviewVerifierNewLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/locationText"
            android:textSize="14sp"
            android:paddingLeft="12dp"
            android:layout_below="@id/cardviewVerifierNewName"/>
		<TextView
            android:id="@+id/cardviewVerifierNewCuisine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/locationText"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:paddingTop="8dp"
			android:paddingHorizontal="12dp"
            android:layout_below="@id/cardviewVerifierNewLocation"/>
        
		<com.google.android.material.button.MaterialButton
			android:id="@+id/buttonConfirmNew"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="AGREGAR"
			android:layout_margin="8dp"
			style="@style/OutlinedButton"
			app:strokeColor="@color/colorPrimary"
			android:layout_alignParentRight="true"
			android:layout_below="@id/cardviewVerifierNewLocation"/>

		<com.google.android.material.button.MaterialButton
			android:id="@+id/buttonDeleteNew"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="DENEGAR"
			android:layout_margin="8dp"
			style="@style/OutlinedButton"
			app:strokeColor="@color/colorPrimary"
			android:layout_toLeftOf="@id/buttonConfirmNew"
			android:layout_below="@id/cardviewVerifierNewLocation"/>

	</RelativeLayout>
</com.google.android.material.card.MaterialCardView>