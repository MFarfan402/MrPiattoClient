<?xml version="1.0" encoding="utf-8"?>   
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RatingSection"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

        <RelativeLayout
            android:id="@+id/ratingGeneralSection"
            android:layout_height="130dp"
            android:layout_width="200dp">

            <TextView
                android:id="@+id/textGeneral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GENERAL"
                android:layout_centerHorizontal="true"
                android:layout_above="@id/generalRating" />
            <TextView
                android:id="@+id/generalRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="3"
                android:text="4.9"
                android:textSize="30sp"
                android:textColor="#000"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="10dp"
                android:layout_centerInParent="true"/>
            <RatingBar
                android:id="@+id/restaurantRatingSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:secondaryProgressTint="@android:color/transparent"
                android:layout_marginTop="8dp"
                android:numStars="5"
                android:stepSize="0.1"
                android:isIndicator="true"
                style="@style/RatingBarSmall"
                android:layout_below="@id/generalRating"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ratingBars"
            android:layout_width="200dp"
            android:layout_height="130dp"
            android:layout_below="@id/textRatings"
            android:layout_toRightOf="@id/ratingGeneralSection">
            <TextView
                    android:id="@+id/number5"
                    style="@style/numberRatingBar"
                    android:text="5"/>
            <TextView
                    android:id="@+id/number4"
                    style="@style/numberRatingBar"
                    android:text="4"
                    android:layout_below="@id/number5"/>
            <TextView
                    android:id="@+id/number3"
                    style="@style/numberRatingBar"
                    android:text="3"
                    android:layout_below="@id/number4"/>
            <TextView
                    android:id="@+id/number2"
                    style="@style/numberRatingBar"
                    android:text="2"
                    android:layout_below="@id/number3"/>
            <TextView
                    android:id="@+id/number1"
                    style="@style/numberRatingBar"
                    android:text="1"
                    android:layout_below="@id/number2"/>
            <ProgressBar
                android:id="@+id/pbar5"
                style="@style/ProgressBar"
                android:progress="60"
                android:layout_toRightOf="@id/number5"/>
            <ProgressBar
                    android:id="@+id/pbar4"
                    style="@style/ProgressBar"
                    android:progress="20"
                    android:layout_toRightOf="@id/number5"
                    android:layout_below="@id/pbar5"/>
            <ProgressBar
                    android:id="@+id/pbar3"
                    style="@style/ProgressBar"
                    android:progress="10"
                    android:layout_toRightOf="@id/number5"
                    android:layout_below="@id/pbar4"/>
            <ProgressBar
                    android:id="@+id/pbar2"
                    style="@style/ProgressBar"
                    android:progress="5"
                    android:layout_toRightOf="@id/number5"
                    android:layout_below="@id/pbar3"/>
            <ProgressBar
                    android:id="@+id/pbar1"
                    style="@style/ProgressBar"
                    android:progress="5"
                    android:layout_toRightOf="@id/number5"
                    android:layout_below="@id/pbar2"/>
        </RelativeLayout>
</RelativeLayout>