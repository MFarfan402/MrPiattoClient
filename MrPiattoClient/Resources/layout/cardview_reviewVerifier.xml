<com.google.android.material.card.MaterialCardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:layout_width="match_parent"
	android:layout_marginVertical="8dp"
    style="@style/CardStyle">
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<ImageView
			android:id="@+id/userImageVerifier"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_margin="8dp"
			android:src="@drawable/user"
			android:scaleType="centerCrop"
		/>
		<TextView
			android:id="@+id/userNameTextVerifier"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Mauricio F."
			android:textColor="#000"
			android:textSize="22sp"
			android:layout_marginTop="12dp"
			android:layout_toRightOf="@id/userImageVerifier"/>
		<com.google.android.material.button.MaterialButton
			android:id="@+id/deleteButtonVerifier"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="ELIMINAR"
			style="@style/OutlinedButton"
			android:layout_marginRight="8dp"
			android:layout_marginTop="8dp"
			android:layout_alignParentRight="true"
		/>
		<com.google.android.material.button.MaterialButton
			android:id="@+id/noProblemButtonVerifier"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="CONSERVAR"
			style="@style/OutlinedButton"
			android:layout_marginRight="8dp"
			android:layout_marginTop="8dp"
			android:layout_alignParentRight="true"
			android:layout_below="@id/deleteButtonVerifier"
		/>
		<RatingBar
			android:id="@+id/ratingBarCommentVerifier"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:rating="4.6"
			android:layout_marginVertical="5dp"
			android:numStars="5"
			android:stepSize="0.1"
			android:isIndicator="true"
			style="@style/RatingBarSmall"
			android:layout_toRightOf="@id/userImageVerifier"
			android:layout_below="@id/userNameTextVerifier"/>

		<TextView
			android:id="@+id/ratingDateVerifier"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="12/12/2019"
			android:textSize="14sp"
			android:layout_below="@id/userImageVerifier"
			android:layout_marginLeft="8dp"
			android:layout_marginTop="4dp"
		/>
		<TextView
			android:id="@+id/ratingCommentVerifier"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="OBVIO MICROBIO QUE SI NOS VAMOS A GRADUAR. Lorem LoremLoremLorem LoremLoremLoremLorem LoremLore mLoremLorem Lorem LoremLorem LoremLorem Lorem"
			android:textSize="14sp"
			android:textColor="#000"
			android:layout_marginVertical="8dp"
			android:layout_marginLeft="8dp"
			android:layout_below="@id/ratingDateVerifier"
		/>
	</RelativeLayout>
</com.google.android.material.card.MaterialCardView>